<form
	addrulepath="/administrator/components/com_swaplocal/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="currency"
			type="currency"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			label="COM_SWAPLOCAL_BILL_FIELD_CURRENCY_LABEL"
			description="COM_SWAPLOCAL_BILL_FIELD_CURRENCY_DESC"
			required="true"
		>
		<option value="0">COM_SWAPLOCAL_BILL_SELECT_CURRENCY</option>
		</field>
		<field
			name="denom"
			type="denomination"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			label="COM_SWAPLOCAL_BILL_FIELD_DENOM_LABEL"
			description="COM_SWAPLOCAL_BILL_FIELD_DENOM_DESC"
			required="true"
		>
		<option value="0">COM_SWAPLOCAL_BILL_SELECT_DENOM</option>
		</field>
		<field
			name="series"
			type="series"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			label="COM_SWAPLOCAL_BILL_FIELD_SERIES_LABEL"
			description="COM_SWAPLOCAL_BILL_FIELD_SERIES_DESC"
			required="true"
		>
		<option value="0">COM_SWAPLOCAL_BILL_SELECT_SERIES</option>
		</field>
		<field
			name="serial"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			label="COM_SWAPLOCAL_BILL_FIELD_SERIAL_LABEL"
			description="COM_SWAPLOCAL_BILL_FIELD_SERIAL_DESC"
			required="true"
		/>
	</fieldset>
	<fields name="params">
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
				name="show_category"
				type="list"
				label="COM_SWAPLOCAL_BILL_FIELD_SHOW_CATEGORY_LABEL"
				description="COM_SWAPLOCAL_BILL_FIELD_SHOW_CATEGORY_DESC"
				default=""
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
</form>

