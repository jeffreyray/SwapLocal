<form
	addrulepath="/administrator/components/com_swaplocal/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			size="64"
			label="COM_SWAPLOCAL_BUSINESS_FIELD_NAME_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_NAME_DESC"
			required="true"
		/>
		<field
			name="description"
			type="editor"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			label="COM_SWAPLOCAL_BUSINESS_FIELD_DESCRIPTION_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_DESCRIPTION_DESC"
			required="false"
		/>
	</fieldset>
	<fieldset name="address">
		<field
			name="street"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			size="64"
			label="COM_SWAPLOCAL_BUSINESS_FIELD_STREET_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_STREET_DESC"
			required="false"
		/>
		<field
			name="city"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			size="26"
			label="COM_SWAPLOCAL_BUSINESS_FIELD_CITY_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_CITY_DESC"
			required="true"
		/>
		<field
			name="state"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			size="2"
			label="COM_SWAPLOCAL_BUSINESS_FIELD_ZIPCODE_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_ZIPCODE_DESC"
			required="true"
		/>
		<field
			name="zipcode"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			size="5"
			label="COM_SWAPLOCAL_BUSINESS_FIELD_ZIPCODE_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_ZIPCODE_DESC"
			required="true"
		/>
	</fieldset>
	<fieldset name="contact">
		<field
			name="phone"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			label="COM_SWAPLOCAL_BUSINESS_FIELD_PHONE_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_PHONE_DESC"
			required="false"
		/>
		<field
			name="email"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			label="COM_SWAPLOCAL_BUSINESS_FIELD_EMAIL_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_EMAIL_DESC"
			required="false"
		/>
		<field
			name="url"
			type="text"
			extension="com_swaplocal"
			class="inputbox"
			default=""
			size="64"
			label="COM_SWAPLOCAL_BUSINESS_FIELD_URL_LABEL"
			description="COM_SWAPLOCAL_BUSINESS_FIELD_URL_DESC"
			required="false"
		/>

	</fieldset>
	<fields name="params">

	</fields>
</form>

