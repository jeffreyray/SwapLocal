<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: swaplocal.xml 14 2009-11-02 18:35:20Z chdemko $ -->
<extension type="component" version="1.6.0" method="upgrade">

	<name>COM_SWAPLOCAL</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>November 2011</creationDate>
	<author>Jeffrey Ray</author>
	<authorEmail>jeffrey.hallock@gmail.com</authorEmail>
	<authorUrl>http://www.chronosoft.info</authorUrl>
	<copyright>(C) 2011 Jeffrey Ray</copyright>
	<license>GPL</license>
	<!--  The version string is recorded in the components table -->
	<version>0.1.00</version>
	<!-- The description is optional and defaults to the name -->
	<description>COM_SWAPLOCAL_DESCRIPTION</description>

	<!-- Runs on install/uninstall/update; New in 1.6 -->
	<scriptfile>script.php</scriptfile>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>swaplocal.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>language</folder>
	</files>

	<media destination="com_swaplocal" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
	</media>

	<administration>
		<!-- Administration Menu Section -->
		<menu img="../media/com_swaplocal/images/tux-16x16.png">COM_SWAPLOCAL_MENU</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>swaplocal.php</filename>
			<filename>controller.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
			<!-- tables files section -->
			<folder>tables</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<!-- controllers files section -->
			<folder>controllers</folder>
			<!-- helpers files section -->
			<folder>helpers</folder>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_swaplocal.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_swaplocal.sys.ini</language>
		</languages>
	</administration>

</extension>

